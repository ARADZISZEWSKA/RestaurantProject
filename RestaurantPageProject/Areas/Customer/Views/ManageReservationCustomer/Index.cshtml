@model List<Reservation>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Twoje rezerwacje </h2>
                <p class="text-white">Jeśli chcesz zmienić dane swojej rezerwacji, prosimy o kontakt z naszym lokalem.</p>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th> Id </th>
                    <th> Imię </th>
                    <th> Nazwisko </th>
                    <th> Liczba osób </th>
                    <th> Numer telefonu </th>
                    <th> Data </th>
                    <th> Godzina </th>
                    <th> Notatka </th>
                    <th>  </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model)
                {
                    <tr>
                        <td> @reservation.Id </td>
                        <td> @reservation.Name </td>
                        <td> @reservation.LastName </td>
                        <td> @reservation.NumberOfPeople </td>
                        <td> @reservation.PhoneNumber </td>
                        <td> @reservation.Date.ToShortDateString() </td>
                        <td> @reservation.SelectedHour </td>
                        <td> @reservation.Note </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Reservation" asp-action="Delete" asp-route-id="@reservation.Id" class="btn btn-secondary mx-2">
                                    <i class="bi bi-trash-fill"></i> Odwołaj
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
